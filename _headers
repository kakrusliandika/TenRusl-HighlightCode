/* 
  Content-Security-Policy: default-src 'self'; img-src 'self' blob: data:; script-src 'self' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; font-src 'self'; connect-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
*/

# Ensure proper types & caching for robots/sitemaps
/robots.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=86400
  X-Robots-Tag: noindex, follow

/sitemap.xml
  Content-Type: application/xml; charset=utf-8
  Cache-Control: public, max-age=86400
  X-Robots-Tag: noindex, follow

/sitemap-index.xml
  Content-Type: application/xml; charset=utf-8
  Cache-Control: public, max-age=86400
  X-Robots-Tag: noindex, follow

/humans.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=604800
  X-Robots-Tag: noindex, follow

/.well-known/security.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=604800
  X-Robots-Tag: noindex, follow

/index.html
  Cache-Control: no-cache, must-revalidate

/sw.js
  Cache-Control: no-cache
  Service-Worker-Allowed: /

/manifest.webmanifest
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=600

# Static assets (fingerprinted -> long cache)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Prism components (autoloaded -> long cache)
/assets/prismjs/package/components/*
  Cache-Control: public, max-age=31536000, immutable

# i18n JSON (not fingerprinted -> shorter cache for quick updates)
/assets/i18n/*
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=3600

# Open Graph images (can be long cached)
/assets/og/*
  Cache-Control: public, max-age=31536000, immutable

/assets/icon.svg
  Content-Type: image/svg+xml; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
